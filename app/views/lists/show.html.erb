<h1><%= @list.title %></h1>
<% if @list.tags.empty? %>
    <%= link_to "Add Tags", tags_path %>
<% else %>
        <% @list.tags.each do |tags| %>
        <%= tags%>
    <% end %>
<% end %>
<p><%= link_to "My Lists", lists_path %> </p>
<% if @cards.empty? %>
    <p>List empty:</p>
<% else %>
    <% @cards.each do |card| %>
        <%= link_to card.body, card_path(card) %>(<%= link_to "Edit", edit_card_path(card) %>)(<%= link_to "Delete", card, method: :delete %>)<br>
    <% end %>
<% end %>

<h3><%= link_to "Add Item", new_list_card_path(@list) %></h3>