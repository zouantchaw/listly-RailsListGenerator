<h1>My Lists</h1>

<% @lists.each do |list| %>
    <div>
        <p><%= link_to list.title, list_path(list) %>(<%= link_to "Edit", edit_list_path(list) %>)(<%= link_to "Delete", list, class: "delete_link", method: :delete %>)</p>
    </div>
<% end %>

<h3><%= link_to "Add List", new_list_path %> </h3>